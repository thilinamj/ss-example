{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 3,
        "selector-pseudo-element-colon-notation": "single",
        "media-feature-name-blacklist": "max-width",
        "at-rule-no-unknown": [ true, {
            "ignoreAtRules": [
                "import",
                "include",
                "mixin"
            ]}
        ]
    }
}   